<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Again!" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wellcome back youÂ´ve been missed" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your Password"
        android:drawableEnd="@drawable/ic_search_login"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:pointerIcon="zoom_in"
        android:drawableRight="@drawable/ic_search_login" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery password" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:onClick="btnLogin"
        android:text="Ingresar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery password" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or continue with" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="20dp"
            android:src="@mipmap/instagram"/>
        <ImageView
            android:id="@+id/imgApple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/biblioteca"/>
        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:src="@mipmap/apple"/>
    </LinearLayout>

</LinearLayout>